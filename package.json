{
  "name": "eli5-vscode",
  "displayName": "ELI5 - Explain Code Like I'm 5",
  "publisher": "amishgaur",
  "description": "Get plain-English explanations of your code using local AI models",
  "version": "0.1.7",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:eli5.explainSelection",
    "onCommand:eli5.explainFile",
    "onView:eli5.view"
  ],
  "main": "./out/extension.js",
  "icn": "media/icon.jpeg",
  "contributes": {
    "commands": [
      {
        "command": "eli5.explainSelection",
        "title": "Explain Selection (ELI5)",
        "category": "ELI5"
      },
      {
        "command": "eli5.explainFile",
        "title": "Explain File (ELI5)",
        "category": "ELI5"
      },
      {
        "command": "eli5.copyLastExplanation",
        "title": "Copy Last Explanation",
        "category": "ELI5"
      },
      {
        "command": "eli5.setupApiKey",
        "title": "Setup API Key",
        "category": "ELI5"
      },
      {
        "command": "eli5.setupOllama",
        "title": "Setup Ollama",
        "category": "ELI5"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "eli5.explainSelection",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "eli5-explorer",
          "title": "ELI5",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "eli5-explorer": [
        {
          "id": "eli5.view",
          "name": "Code Explanation",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "ELI5",
      "properties": {
        "eli5.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for cloud providers (OpenAI, Anthropic, etc.). Leave empty to use local Ollama."
        },
        "eli5.endpoint": {
          "type": "string",
          "default": "https://api.openai.com/v1/chat/completions",
          "description": "API endpoint for cloud providers (optional override)"
        },
        "eli5.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "Model name for cloud providers (e.g., gpt-4o-mini, claude-3-sonnet)"
        },
        "eli5.systemPrompt": {
          "type": "string",
          "default": "Explain this code simply for beginners. Use short sentences. Include: 1) What it does (3-5 steps), 2) Why it's written this way, 3) Common mistakes to avoid. Keep under 200 words.",
          "description": "System prompt for the AI model"
        },
        "eli5.maxTokens": {
          "type": "number",
          "default": 500,
          "description": "Maximum tokens for the response"
        },
        "eli5.timeoutMs": {
          "type": "number",
          "default": 60000,
          "description": "Timeout for API requests in milliseconds (60s recommended for local models)"
        },
        "eli5.maxLines": {
          "type": "number",
          "default": 800,
          "description": "Maximum lines of code to explain (truncates if exceeded)"
        },
        "eli5.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
